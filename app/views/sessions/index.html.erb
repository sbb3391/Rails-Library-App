<h1 class="font-bold text-3xl text-center mb-4">Login Form</h1>

<%= form_with scope: :session, url: login_sessions_path do |f| %>
  <%= f.label :username, class: "uppercase font-bold text-lg text-grey-darkest mb-1" %>
  <%= f.text_field :username, class: "w-12/12 pl-2 border border-black rounded" %>
  <br><br>
  <%= f.label :password, class: "uppercase font-bold text-lg text-grey-darkest mb-1" %>
  <%= f.password_field :password, class: "w-12/12 pl-2 border border-black rounded" %>
  <br><br>
  <%= f.submit "Log In", class: "p-2 bg-indigo-400 text-lg text-white rounded-xl cursor-pointer" %>
<% end %>
<br>

<%= link_to("Don't have an account?", new_user_path) %>
